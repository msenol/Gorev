          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "gorev.showTaskDetail",
          "when": "view == gorevTasks && (viewItem == task || viewItem == task:parent || viewItem == task:child)",
          "group": "1_gorev_islemleri@1"
        },
        {
          "command": "gorev.editTaskTitle",
          "when": "view == gorevTasks && (viewItem == task || viewItem == task:parent || viewItem == task:child)",
