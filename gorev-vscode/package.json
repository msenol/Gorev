  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Extension Packs"
  ],
  "keywords": [
    "task",
    "todo",
    "project management",
    "mcp",
    "gorev",
    "dependency",
    "subtask",
    "hierarchy",
    "workflow",
    "productivity",
    "ai assistant",
    "claude",
    "turkish",
    "template",
    "progress tracking",
    "export",
    "import",
    "data export",
    "csv",
    "json",
    "bilingual",
    "windsurf",
    "cursor",
    "conflict resolution"
